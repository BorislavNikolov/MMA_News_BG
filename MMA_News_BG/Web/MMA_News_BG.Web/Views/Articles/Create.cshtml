@model MMA_News_BG.Web.ViewModels.Articles.ArticleCreateInputModel
@{
    this.ViewData["Title"] = "New Article";
    var categories = Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" asp-action="Create" class="text-white">
    <div class="text-white">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control text-white" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="text-white mt-2">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="text-white mt-2">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control text-white"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="text-white btn btn-warning" />
</form>